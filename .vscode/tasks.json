{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Arduino Bridge",
      "type": "shell",
      "command": "cd arduino-bridge && npm start",
      "isBackground": true,
      "problemMatcher": {
        "pattern": [
          {
            "regexp": ".",
            "file": 1,
            "location": 2,
            "message": 3
          }
        ],
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Bridge server running",
          "endsPattern": "Open the 'Ports' tab"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}
